<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE5E5"
    android:backgroundTint="#EBE5E5"
    tools:context=".CreateOrJoin">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:srcCompat="@drawable/ic_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/business_owner"
            android:textAlignment="center"
            android:textColor="#303030"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnCreateTeam"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="22dp"
            android:background="@drawable/borderstyle"
            android:text="Create a team"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#A78383"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employee"
            android:textAlignment="center"
            android:textColor="#303030"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnJoinTeam"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="22dp"
            android:background="@drawable/borderstyle"
            android:text="Join a team"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#A78383"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGoToLogin2"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:backgroundTint="#A78383"
        android:text="Go back to login"
        android:textAllCaps="false"
        android:textColor="#FFFAF9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="77dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="701dp" />

</androidx.constraintlayout.widget.ConstraintLayout>