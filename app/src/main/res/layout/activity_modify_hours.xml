<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE5E5"
    android:backgroundTint="#EBE5E5"
    tools:context=".ModifyHours">

    <TextView
        android:id="@+id/tvModifyHours"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Modify Hours"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#303030"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_down"
        android:rotation="90"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline4">

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textColor="#A78383"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtModifyDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFAF9"
            android:ems="10"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#303030"
            android:textColorHighlight="#303030"
            android:textColorHint="#303030" />
        <Button
            android:id="@+id/btnModifySearch"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:backgroundTint="#A78383"

            android:text="Search"
            android:textAllCaps="false"
            android:textColor="#FFFAF9"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvPunchIn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punch In:"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:textColor="#A78383"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPunchIn2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFAF9"
            android:ems="10"
            android:inputType="time"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#303030"
            android:textColorHighlight="#303030"
            android:textAlignment="center"
            android:hint="- - : - -"
            android:textColorHint="#303030" />

        <TextView
            android:id="@+id/tvPunchOut2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punch Out:"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="#A78383"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPunchOut2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#FFFAF9"
            android:ems="10"
            android:inputType="time"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="- - : - -"
            android:textAlignment="center"
            android:textColor="#303030"
            android:textColorHighlight="#303030"
            android:textColorHint="#303030" />

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:backgroundTint="#A78383"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#FFFAF9"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="77dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="701dp" />

</androidx.constraintlayout.widget.ConstraintLayout>